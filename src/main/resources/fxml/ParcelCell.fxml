<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="150.0" stylesheets="@../css/ParcelCell.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <AnchorPane fx:id="vendorImage" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #ccc;" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <AnchorPane fx:id="statusImage" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #555;" BorderPane.alignment="CENTER" />
    </right>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
                <VBox alignment="CENTER_LEFT" prefHeight="201.0" prefWidth="512.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="parcelName" text="Pacel Name">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="parcelCode" text="ELxxxxxxxxxxxxxTH" textFill="#949494">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </VBox>
         </center>
         <right>
                <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="etaText" text="2&#10;days" textAlignment="CENTER">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets right="30.0" />
                    </padding>
                </VBox>
         </right>
      </BorderPane>
   </center>
</BorderPane>
